{
  "name": "@blamnetwork/blf_lsp",
  "description": "BLF utilities for bnet's LSPs",
  "main": "index.js",
  "repository": "https://github.com/Blam-Network/blf_lib",
  "license": "MIT",
  "keywords": [
    "napi-rs",
    "NAPI",
    "N-API",
    "Rust",
    "node-addon",
    "node-addon-api"
  ],
  "napi": {
    "name": "blf_lsp",
    "package": {
      "name": "blf_lsp"
    },
    "triples": {
      "defaults": false,
      "additional": [
        "x86_64-unknown-linux-musl",
        "x86_64-unknown-linux-gnu",
        "x86_64-apple-darwin",
        "x86_64-pc-windows-msvc",
        "aarch64-unknown-linux-gnu",
        "aarch64-apple-darwin",
        "aarch64-unknown-linux-musl",
        "aarch64-pc-windows-msvc"
      ]
    }
  },
  "files": [
    "index.d.ts",
    "index.js"
  ],
  "engines": {
    "node": ">= 10"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "scripts": {
    "artifacts": "napi artifacts",
    "bench": "node --import @oxc-node/core/register benchmark/bench.ts",
    "build": "napi build --platform --release --cargo-cwd ../blf_lsp",
    "build:debug": "napi build --platform --cargo-cwd ../blf_lsp",
    "format": "run-p format:prettier format:rs format:toml",
    "format:prettier": "prettier . -w",
    "format:toml": "taplo format",
    "format:rs": "cargo fmt",
    "lint": "oxlint .",
    "prepublishOnly": "napi prepublish -t npm",
    "test": "ava",
    "version": "napi version"
  },
  "devDependencies": {
    "@napi-rs/cli": "^2.18.4",
    "@oxc-node/core": "^0.0.23",
    "@taplo/cli": "^0.7.0",
    "ava": "^6.2.0",
    "chalk": "^5.4.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "npm-run-all2": "^7.0.2",
    "oxlint": "^0.16.3",
    "prettier": "^3.5.3",
    "tinybench": "^4.0.1",
    "typescript": "^5.8.2"
  },
  "lint-staged": {
    "*.@(js|ts|tsx)": [
      "oxlint --fix"
    ],
    "*.@(js|ts|tsx|yml|yaml|md|json)": [
      "prettier --write"
    ],
    "*.toml": [
      "taplo format"
    ]
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "timeout": "2m",
    "workerThreads": false,
    "environmentVariables": {
      "OXC_TSCONFIG_PATH": "./__test__/tsconfig.json"
    },
    "nodeArguments": [
      "--import",
      "@oxc-node/core/register"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "trailingComma": "all",
    "singleQuote": true,
    "arrowParens": "always"
  },
  "packageManager": "yarn@4.9.1",
  "version": "1.7.0-pre20"
}